<!-- SLIDE OUT UPDATES  -->
<script>
    function toggleQuoteBox(open) {
        const box = document.getElementById('quoteBox');
        const openBtn = document.getElementById('openToggleBtn');
        const closeBtn = document.getElementById('closeToggleBtn');

        if (open) {
            box.classList.add('active');
            openBtn.style.display = 'none';
            closeBtn.style.display = 'block';
        } else {
            box.classList.remove('active');
            openBtn.style.display = 'block';
            closeBtn.style.display = 'none';
        }
    }
    // Initialize (hide the inner close button initially)
    document.addEventListener("DOMContentLoaded", () => {
        document.getElementById('closeToggleBtn').style.display = 'none';
    });
</script>




<!-- SLIDE OUT CONTENTS TO VIEW  -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const slideContents = [
      document.getElementById("content1"),
      document.getElementById("content2"),
      document.getElementById("content3"),
    ];

    let currentSlideIndex = 0;

    const leftBtn = document.getElementById("left");
    const rightBtn = document.getElementById("right");

    function switchContent(direction) {
      if (!slideContents[currentSlideIndex]) return;
      slideContents[currentSlideIndex].classList.remove("active");

      currentSlideIndex = (currentSlideIndex + direction + slideContents.length) % slideContents.length;

      if (slideContents[currentSlideIndex]) {
        slideContents[currentSlideIndex].classList.add("active");
      }
    }

    if (leftBtn) {
      leftBtn.addEventListener("click", () => switchContent(-1));
    }

    if (rightBtn) {
      rightBtn.addEventListener("click", () => switchContent(1));
    }
  });
</script>
